<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/contact_title"
        style="@style/contact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="48dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contact_title"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            >
            <TextView
                style="@style/contact_header"
                android:text="Radno vreme"
                android:textAlignment="center"
                >
            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                style="@style/contact_row"
                android:text="Ponedeljak - Petak"
                >
            </TextView>
            <TextView
                style="@style/contact_row"
                android:text="09:00h - 20:00h"
                >
            </TextView>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                style="@style/contact_row"
                android:text="Subota"
                >
            </TextView>
            <TextView
                style="@style/contact_row"
                android:text="10:00h - 18:00h"
                >
            </TextView>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                style="@style/contact_row"
                android:text="Nedelja"
                >
            </TextView>
            <TextView
                style="@style/contact_row"
                android:text="ne radimo"
                >
            </TextView>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                style="@style/contact_header"
                android:text="Kontakt informacije"
                android:textAlignment="center"
                >
            </TextView>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/phone"
                app:tint="@color/pink" />

            <TextView
                style="@style/contact_row"
                android:text="+38162859754"></TextView>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/mail"
                />

            <TextView
                style="@style/contact_row"
                android:text="slatkizalogaji@gmail.com"></TextView>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/map_marker"
                app:tint="@color/pink"
                />

            <TextView
                style="@style/contact_row"
                android:text="Bulevar kralja Aleksandra 198, Beograd 11000"></TextView>


        </TableRow>
    </TableLayout>

    <WebView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>