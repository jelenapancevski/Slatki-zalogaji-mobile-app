<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/contact_title"
        style="@style/contact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="48dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contact_title"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            >
            <TextView
                style="@style/contact_header"
                android:text="@string/working_hours"
                android:textAlignment="center"
                >
            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                style="@style/contact_row"
                android:text="@string/monday_friday"
                >
            </TextView>
            <TextView
                style="@style/contact_row"
                android:layout_gravity="right"
                android:text="@string/monday_friday_hours"
                >
            </TextView>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                style="@style/contact_row"
                android:text="@string/saturday"
                >
            </TextView>
            <TextView
                style="@style/contact_row"
                android:layout_gravity="right"
                android:text="@string/saturaday_hours"
                >
            </TextView>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                style="@style/contact_row"
                android:text="@string/sunday"
                >
            </TextView>
            <TextView
                style="@style/contact_row"
                android:layout_gravity="right"
                android:text="@string/sunday_hours"
                >
            </TextView>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                style="@style/contact_header"
                android:text="@string/contact_info"
                android:textAlignment="center"
                >
            </TextView>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/phone"
                app:tint="@color/pink"
                />

            <TextView
                style="@style/contact_row"
                android:layout_gravity="left"
                android:text="@string/phone"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/mail"
                />

            <TextView
                style="@style/contact_row"
                android:layout_gravity="left"
                android:text="@string/email"/>


        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_gravity="center_horizontal|center"
                android:src="@drawable/map_marker"
                app:tint="@color/pink"
                />

            <TextView
                style="@style/contact_row"
                android:minLines="2"
                android:layout_width="200dp"
                android:layout_gravity="left"
                android:text="@string/address"/>


        </TableRow>
    </TableLayout>

    <WebView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>