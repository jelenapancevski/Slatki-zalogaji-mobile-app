<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ProductActivity"
    android:background="@color/offwhite">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Svarcvald"
        android:id="@+id/name"
        style="@style/product_info_name"
        app:layout_constraintTop_toTopOf="parent"
        >
    </TextView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:id="@+id/image"
        android:src="@drawable/profilebackground"
        app:layout_constraintTop_toBottomOf="@id/name">
    </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        style="@style/product_info_description"

        android:text="Ova Švarcvald torta kombinuje bogate slojeve čokoladne torte sa
svežim višnjama, likerom od trešanja i jednostavnom glazurom od
slatke pavlake."
        app:layout_constraintTop_toBottomOf="@id/image"
        >
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cena"
        android:id="@+id/price"
        style="@style/product_info_price"
        app:layout_constraintTop_toBottomOf="@id/description"
        >
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sastojci"
        android:id="@+id/subtitle"
        style="@style/product_info_subtitle"
        app:layout_constraintTop_toBottomOf="@id/price"
        >
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ingredients"
        android:paddingLeft="10pt"
        style="@style/product_info_ingredients"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        >
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Komentari"
        android:id="@+id/commentstitle"
        style="@style/product_info_price"
        android:textAlignment="viewStart"
        android:padding="15pt"
        app:layout_constraintTop_toBottomOf="@id/ingredients"
        ></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/comment"
        app:layout_constraintTop_toBottomOf="@id/commentstitle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>